<id>Dougiefresh:ThreadsParticipated</id>
<name>Threads Participated In</name>
<version>1.0</version>

<file name="$sourcedir/Profile.php">
	<operation>
		<search position="before"><![CDATA['topics' => array($txt['showTopics'], array('profile_view_own', 'profile_view_any')),]]></search>
		<add><![CDATA[
						'threads' => array($txt['showThreads'], array('profile_view_own', 'profile_view_any')),]]></add>
	</operation>
</file>
<file name="$sourcedir/Profile-View.php">
	<operation>
		<search position="after"><![CDATA['attach' => array(]]></search>
		<add><![CDATA['threads' => array(
			),
			]]></add>
	</operation>
	<operation>
		<search position="after"><![CDATA[$context['is_topics'] = isset($_GET['sa']) && $_GET['sa'] == 'topics' ? true : false;]]></search>
		<add><![CDATA[if (isset($_GET['sa']) && $_GET['sa'] == 'threads')
	{
		loadTemplate('Profile-Participation');
		$context['is_topics'] = true;
		$context['sub_template'] = 'showThreads';
	}
	else
		]]></add>
	</operation>
</file>
</modification>